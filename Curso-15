    <script>
        let checklistCompleted = 0;
        let heatmapClicks = {};

        // Inicializar heatmap
        function initializeHeatmap() {
            const grid = document.getElementById('heatmapGrid');
            grid.innerHTML = '';
            
            for (let i = 0; i < 80; i++) {
                const cell = document.createElement('div');
                cell.className = 'heatmap-cell heat-low';
                cell.dataset.index = i;
                cell.addEventListener('click', function() {
                    simulateHeatmapClick(this);
                });
                grid.appendChild(cell);
            }
        }

        function simulateHeatmapClick(cell) {
            const index = cell.dataset.index;
            heatmapClicks[index] = (heatmapClicks[index] || 0) + 1;
            
            const clicks = heatmapClicks[index];
            if (clicks < 3) {
                cell.className = 'heatmap-cell heat-low';
            } else if (clicks < 6) {
                cell.className = 'heatmap-cell heat-medium';
            } else {
                cell.className = 'heatmap-cell heat-high';
            }
        }

        function generateHeatmap() {
            heatmapClicks = {};
            const cells = document.querySelectorAll('.heatmap-cell');
            
            // Simular clics aleatorios
            cells.forEach((cell, index) => {
                const randomClicks = Math.floor(Math.random() * 10);
                for (let i = 0; i < randomClicks; i++) {
                    simulateHeatmapClick(cell);
                }
            });
            
            showNotification('Nuevo heatmap generado');
        }

        function analyzeHeatmap() {
            const insights = [
                '🎯 Área superior derecha recibe 40% más clics',
                '📱 Los usuarios evitan la zona inferior izquierda',
                '🔥 El botón principal tiene alta interacción',
                '👀 Las imágenes generan más engagement que texto',
                '⚡ La navegación superior es muy utilizada'
            ];
            
            const insightsContainer = document.getElementById('heatmapInsights');
            const insightsList = document.getElementById('insightsList');
            
            insightsList.innerHTML = insights.map(insight => `<li>${insight}</li>`).join('');
            insightsContainer.style.display = 'block';
            
            showNotification('Análisis del heatmap completado');
        }

        function toggleChecklist(item) {
            const checkbox = item.querySelector('.checkbox');
            const isCompleted = item.classList.contains('completed');
            
            if (!isCompleted) {
                item.classList.add('completed');
                checkbox.textContent = '✓';
                checklistCompleted++;
                showNotification('Tarea completada');
            } else {
                item.classList.remove('completed');
                checkbox.textContent = '';
                checklistCompleted--;
            }
            
            updateProgress();
        }

        function updateProgress() {
            const totalItems = document.querySelectorAll('.checklist-item').length;
            const progressPercentage = (checklistCompleted / totalItems) * 100;
            const progressBar = document.getElementById('goalProgress');
            progressBar.style.width = progressPercentage + '%';
        }

        function refreshAnalytics() {
            const metrics = {
                conversionRate: (Math.random() * 2 + 2.5).toFixed(2) + '%',
                visitors: Math.floor(Math.random() * 5000 + 10000).toLocaleString(),
                revenue: ' + Math.floor(Math.random() * 5000 + 5000).toLocaleString(),
                bounceRate: (Math.random() * 10 + 35).toFixed(1) + '%',
                sessionDuration: Math.floor(Math.random() * 120 + 180) + 's',
                pagesPerSession: (Math.random() * 1 + 2).toFixed(1)
            };
            
            Object.keys(metrics).forEach(key => {
                const element = document.getElementById(key);
                if (element) {
                    element.style.transform = 'scale(1.2)';
                    element.style.color = '#4CAF50';
                    setTimeout(() => {
                        element.textContent = metrics[key];
                        element.style.transform = 'scale(1)';
                        element.style.color = 'white';
                    }, 300);
                }
            });
            
            showNotification('Analytics actualizados');
        }

        function showMetricDetails(metric) {
            const details = {
                conversion: 'Tasa de conversión: 3.24%\n• Objetivo: 4.5%\n• Tendencia: +0.8% vs mes anterior\n• Mejor día: Martes (4.1%)',
                visitors: 'Visitantes únicos: 12,847\n• Tráfico orgánico: 65%\n• Tráfico directo: 20%\n• Redes sociales: 15%',
                revenue: 'Revenue total: $8,429\n• Revenue por visitante: $0.66\n• Valor promedio pedido: $78\n• Transacciones: 108',
                bounce: 'Bounce Rate: 42.3%\n• Móvil: 48%\n• Desktop: 38%\n• Benchmark industria: 45%',
                session: 'Duración sesión: 4:23\n• Primera visita: 3:45\n• Visitantes recurrentes: 5:12\n• Página más visitada: Productos',
                pages: 'Páginas por sesión: 2.8\n• Móvil: 2.3\n• Desktop: 3.2\n• Meta objetivo: 3.5'
            };
            
            alert(details[metric] || 'Información no disponible');
        }

        function createABTest() {
            const testName = document.getElementById('testName').value;
            const testElement = document.getElementById('testElement').value;
            const duration = document.getElementById('testDuration').value;
            
            if (!testName) {
                alert('Por favor ingresa un nombre para el test');
                return;
            }
            
            showNotification(`Test A/B "${testName}" creado exitosamente`);
        }

        function launchTest() {
            showNotification('Test A/B lanzado - Recopilando datos...');
        }

        function pauseTest() {
            showNotification('Test A/B pausado');
        }

        function optimizeStep(step) {
            const recommendations = {
                visitors: '• Mejorar SEO y SEM\n• Campañas en redes sociales\n• Marketing de contenidos',
                interest: '• Optimizar headline principal\n• Mejorar propuesta de valor\n• A/B test en hero section',
                consideration: '• Añadir testimonios\n• Mostrar garantías\n• Simplificar navegación',
                intent: '• Optimizar formularios\n• Reducir fricción\n• Urgencia y escasez',
                purchase: '• Simplificar checkout\n• Múltiples métodos pago\n• Chat de soporte'
            };
            
            alert(`Recomendaciones para optimizar ${step}:\n\n${recommendations[step]}`);
        }

        function analyzeFunnel() {
            alert('Análisis del Funnel:\n\n📊 Mayor pérdida en Consideración → Intención (-23%)\n🎯 Oportunidad: Mejorar propuesta de valor\n💡 Recomendación: A/B test en página de producto\n📈 Potencial de mejora: +15% conversión total');
        }

        function connectGA() {
            showNotification('Google Analytics conectado exitosamente');
        }

        function connectHotjar() {
            showNotification('Hotjar integrado correctamente');
        }

        function connectOptimizely() {
            showNotification('Optimizely configurado');
        }

        function analyzePageSpeed() {
            alert('📊 Análisis PageSpeed:\n\n• Desktop: 78/100 ⚡\n• Móvil: 65/100 ⚠️\n• LCP: 2.8s (Bueno)\n• FID: 120ms (Needs improvement)\n• CLS: 0.15 (Needs improvement)\n\n🔧 Recomendaciones:\n• Optimizar imágenes\n• Minimizar JavaScript\n• Usar CDN');
        }

        function addChecklistItem() {
            const newTask = prompt('Describe la nueva tarea de optimización:');
            if (newTask) {
                showNotification('Nueva tarea añadida al checklist');
            }
        }

        function exportChecklist() {
            showNotification('Checklist exportado a PDF');
        }

        function exportReport() {
            showNotification('Reporte de analytics exportado');
        }

        function selectOption(element, isCorrect) {
            const siblings = element.parentNode.querySelectorAll('.quiz-option');
            siblings.forEach(sibling => sibling.classList.remove('selected'));
            element.classList.add('selected');
            element.dataset.correct = isCorrect;
        }

        function checkQuizResults() {
            const selectedOptions = document.querySelectorAll('.quiz-option.selected');
            
            if (selectedOptions.length < 3) {
                alert('Por favor responde todas las preguntas');
                return;
            }
            
            let correct = 0;
            selectedOptions.forEach(option => {
                if (option.dataset.correct === 'true') {
                    correct++;
                    option.style.backgroundColor = '#00b894';
                } else {
                    option.style.backgroundColor = '#e84393';
                }
            });
            
            const percentage = (correct / 3) * 100;
            let message = '';
            
            if (percentage >= 80) {
                message = '🎉 ¡Excelente! Dominas la optimización de conversiones';
            } else if (percentage >= 60) {
                message = '👍 Bien, pero puedes mejorar tu conocimiento en CRO';
            } else {
                message = '📚 Necesitas repasar los conceptos de optimización';
            }
            
            document.getElementById('quizResults').innerHTML = `
                <div style="text-align: center; padding: 20px; background: rgba(255,255,255,0.9); border-radius: 10px; color: #333;">
                    <h3>Resultado: ${correct}/3 (${percentage.toFixed(0)}%)</h3>
                    <p>${message}</p>
                </div>
            `;
            document.getElementById('quizResults').style.display = 'block';
        }

        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Inicializar al cargar la página
        window.addEventListener('load', function() {
            initializeHeatmap();
            
            // Contar elementos completados inicialmente
            const completedItems = document.querySelectorAll('.checklist-item.completed');
            checklistCompleted = completedItems.length;
            updateProgress();
            
            // Animaciones de carga
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
</body>
</html>
